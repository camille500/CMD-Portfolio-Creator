<body>

  <header>
    <div class="container-fluid">
      <section class="header">
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <h1 class="cmd-orange">Hi.</h1>
            <h1>I am <%=user.data.name%></h1>
          </div>
          <div class="col-sm-12 col-md-6 center">
            <img src="<%=user.data.about.picture%>" class="photo"/>
          </div>
        </div>
      </section>
    </div>
  </header>

  <main>
    <div class="container-fluid projects-container">
        <section class="projects">
          <!-- <h1>Projects</h1> -->
          <div class="row">
            <div data-open='1' class="col-xs-12 col-sm-6 col-md-4 marginless project">
              <img src="/template/assets/images/cmd-tool.jpg" />
            </div>
          </div>
        </section>
      </div>
      <div class="container-fluid about-container">
        <section class="about">
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <h1>About</h1>
              <p><%=user.data.about.about%></p>
            </div>
            <div class="col-sm-12 col-md-6">
              <h1>Education</h1>
              <ul>
                <li>
                  <div class="row">
                    <div class="col-sm-3">
                      Jaar
                    </div>
                    <div class="col-sm-9">
                      Studie
                    </div>
                  </div>
                </li>
                <li>Second item</li>
                <li>Third item</li>
                <li>Last item</li>
              </ul>
            </div>
          </div>
          <div class="row skills">
            <!-- <div class="item col-xl-12 intro">
              <h1>Skills</h1>
            </div> -->
            <% for(let key in user.data.about.skills) { %>
              <div class="item col-xs-12 col-sm-6 col-md-3">
                <img src="<%= user.data.about.skills[key]['picture'] %>" />
                <h2><%= user.data.about.skills[key]['name'] %></h2>
                <p><%= user.data.about.skills[key]['about'] %></p>
              </div>
            <% } %>
          </div>
          <div class="row">
            <div class="col-sm-12 col-md-6">
              <h1>Work Experience</h1>
              <p><%=user.data.about.experience%></p>
            </div>
          </div>
        </section>
    </div>

